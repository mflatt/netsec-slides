def hello_c:
  @verbatim|{
#include <unistd.h>
#include <stdio.h>

void say_hello() {
  char name[10];
  printf("[debug: reading into %p]\n", name);
  FILE *f = fopen("name", "rb");
  |@bug
  fclose(f);
  printf("hello %s\n", name);
}

char *get_shell_path() {
  return "/bin/sh";
}

void show_date() {
  extern char** environ;
  char *bin_date = |@bin_date;
  char *argv[2] = {bin_date, NULL};
  execve(bin_date, argv, environ);
}

int main(int argc, char **argv) {
  say_hello();
  show_date();
  return 0;
}
}|

